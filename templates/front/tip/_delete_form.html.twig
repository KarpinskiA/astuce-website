<form method="post" action="{{ path('app_front_tip_delete', {'id': tip.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tip.id) }}">
    <button class="btn btn-outline-danger btn-sm mb-3">
      <i class="bi bi-trash"></i>
    </button>
</form>
